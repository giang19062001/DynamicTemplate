{
   "compilerOptions": {
      // File Layout
      "rootDir": "./src",
      "outDir": "./dist",

      // Environment Settings
      "module": "nodenext", // tốt cho Node >= 18 với ESM
      "target": "esnext",
      "lib": ["esnext"], // thêm dòng này để hỗ trợ đầy đủ
      "types": ["node"],
      // Other Outputs
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,

      // Stricter Typechecking Options
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,

      // JSX / React (bỏ qua nếu bạn không dùng React)
      "jsx": "react-jsx",

      // Modules / Imports
      "verbatimModuleSyntax": false,
      "isolatedModules": true,
      "moduleDetection": "force",
      "noUncheckedSideEffectImports": true,

      // Performance / Clean Build
      "skipLibCheck": true
   }
}
